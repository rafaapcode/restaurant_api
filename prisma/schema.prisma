// learn more about it in the docs: https://pris.ly/d/prisma-schema

generator client {
  provider = "prisma-client-js"
}

datasource db {
  provider = "mysql"
  url      = env("DATABASE_URL")
}

model Restaurant{
  id String @id @default(uuid())
  name String @unique
  address String
  hour String
  product Product[]
  photo_restaurant Foto_restaurant[]

  @@map("restaurant")
}

model Category{
  id String @id @default(uuid())
  name String @unique
  product Product[]

  @@map("category")
}

model Product{
  id String @id @default(uuid())
  name String @unique
  price Int
  categoryId String
  category Category @relation(fields: [categoryId], references: [id])
  restaurantId String
  restaurant Restaurant @relation(fields: [restaurantId], references: [id])
  promotion Boolean
  promo Promotion?
  photo_product Foto_product[]

  @@map("product")
}

model Promotion{
  id Int @id @default(autoincrement())
  newPrice Int @default(0)
  description String @default("")
  hours String
  productId String @unique
  product Product @relation(fields: [productId], references: [id])

  @@map("promotion")
}

model Foto_product{
  id Int @id @default(autoincrement())
  url String
  filename String @default("")
  productPhotoId String
  productPhoto Product @relation(fields: [productPhotoId], references: [id])

  @@map("foto_product")
}

model Foto_restaurant{
  id Int @id @default(autoincrement())
  url String
  filename String @default("")
  restaurantPhotoId String
  restaurantPhoto Restaurant @relation(fields: [restaurantPhotoId], references: [id])

  @@map("foto_restaurant")
}
